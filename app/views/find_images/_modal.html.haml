.modal#find-images-modal{ 'aria-hidden': 'true', role: 'dialog', tabindex: '-1' }
  .modal-dialog{ role: 'document' }
    .modal-content
      .modal-header
        %h2.modal-title Choose an image
        %button.close{ 'aria-label': 'Close', 'data-dismiss': 'modal', type: 'button' }
          %span{'aria-hidden': 'true'} Ã—
      .modal-body
        .row
          - image_urls.to_a.in_groups_of(2).transpose.each do |col|
            .col-6
              - col.compact.each do |url|
                .tb-radio-image
                  = radio_button_tag :image_url, url
                  = label_tag "image_url_#{url}" do
                    = image_tag(url, class: 'w-100', class: 'rounded mb-3 w-100 border')
