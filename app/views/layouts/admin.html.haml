<!DOCTYPE html>
%html{ lang: 'en' }
  !!!
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv': 'Content-Type' }
    %meta{ charset: 'utf-8' }
    %meta{ content: 'NOODP', name: 'ROBOTS' }
    %meta{ content: 'width=device-width, initial-scale=1, shrink-to-fit=no', name: 'viewport' }
    = render 'favicon'
    = display_meta_tags site: 'Tastybook'
    = preload_pack_asset 'media/webfonts/fa-regular-400.woff2'
    = preload_pack_asset 'media/webfonts/fa-solid-900.woff2'
    = stylesheet_pack_tag 'styles', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true
    = csrf_meta_tags
    = csp_meta_tag

  %body
    .navbar.navbar-light.shadow-sm
      %ul.navbar-nav.ml-auto
        %li.nav-item
          = link_to 'Back to Tastybook', root_path, class: 'nav-link'
    %main.container.flex-fill.d-flex.flex-column.flex-auto.flex-shrink-0.py-4.py-lg-5
      = render 'flashes'
      = yield
    = yield :modals
    = yield :javascript
