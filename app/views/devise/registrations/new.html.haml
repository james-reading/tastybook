- content_for :extra_container_class, 'justify-content-center'

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .card.devise-card
    .card-body
      .form-inputs
        = f.input :username,  autofocus: true, input_html: { autocomplete: 'username' }
        = f.input :email,  autofocus: true, input_html: { autocomplete: 'email' }
        = f.input :password, input_html: { autocomplete: 'new-password' }
        = f.input :password_confirmation, input_html: { autocomplete: 'new-password' }
      .form-actions
        = f.button :submit, 'Sign up', class: 'btn btn-primary float-right'

.mt-3
  = render 'devise/shared/links'
