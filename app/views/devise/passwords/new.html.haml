- content_for :extra_container_class, 'justify-content-center'

%h1.text-center.mb-3= title 'Forgot password'
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  .card.devise-card.shadow-sm
    .card-body
      .form-inputs
        = f.input :email,
          required: true,
          input_html: { autocomplete: "email" }
      .form-actions
        = f.button :submit, "Send reset link", class: 'btn btn-primary float-right'
.mt-3
  = render "devise/shared/links"
