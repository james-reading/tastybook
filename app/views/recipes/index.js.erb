<% if params[:page] %>
  $('.js-updateable-recipes').append("<%= j render partial: 'recipes/recipe', collection: @recipes, as: :recipe %>")
<% else %>
  $('#filterCollapse').collapse('hide');
  $('.js-updateable-recipes').html("<%= j render 'recipes/results', recipes: @recipes, search: @search %>")
<% end %>

$('.js-load-more-recipes').replaceWith("<%= j render 'recipes/load_more_link' %>")

document.dispatchEvent(new Event('lazyload'));
