.dropleft
  %button.btn.btn-link.pr-0{ id: 'dropdown',
    'aria-expanded' => 'false',
    'aria-haspopup' => 'true',
    'data-toggle' => 'dropdown',
    type: 'button'}
    %i.fas.fa-ellipsis-v.text-primary
  .dropdown-menu{ 'aria-labelledby' => 'dropdown' }
    = link_to 'Edit', [:edit, @recipe], class: 'dropdown-item'
    .dropdown-divider
    = link_to 'Delete',
      @recipe,
      class: 'dropdown-item text-danger',
      method: :delete,
      data: { confirm: 'Are you sure you want to delete this recipe?' }
