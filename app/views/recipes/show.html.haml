.card.shadow-sm.mb-4
  .card-body
    .d-flex.justify-content-between
      %h1.mb-0= @recipe.name
      = render 'dropdown'

    .mb-4
      = render 'information', recipe: @recipe

    = render 'instructions',
      ingredients: @recipe.ingredients.load,
      steps: @recipe.steps.load

    = render 'notes', recipe: @recipe

.card.shadow-sm
  .card-body
    = render 'comments'
