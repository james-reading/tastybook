- if @recipes.empty?
  - content_for :extra_container_class, 'justify-content-center align-items-center'
  %h2.mb-4 Nothing here!
  = link_to 'New recipe', [:new, :recipe], class: 'btn btn-primary'

- else
  = simple_form_for @search,
    url: recipes_path,
    method: :get,
    remote: true,
    html: { class: 'form-inline tb-form-no-border mb-4' } do |f|

    = f.input :q,
      placeholder: 'Search',
      label_html: { class: 'sr-only' },
      wrapper_html: { class: 'flex-fill mr-2 mb-0' },
      input_html: { class: 'flex-fill' }

    = f.button :button,
      type: :submit,
      class: 'btn btn-primary flex-center search-button',
      data: { 'disable-with': "<i class='fa fa-spinner fa-spin'></i>".html_safe } do
      %i.fas.fa-search

  .js-updateable-recipes.rythmy-4
    = render @recipes
