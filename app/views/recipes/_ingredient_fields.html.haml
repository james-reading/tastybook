.nested-fields
  .d-flex.mb-3
    %button.text-muted.pr-3.tb-button-reset.js-sortable-handle{ type: 'button', draggable: 'true', style: 'padding-top: 10px' }
      %i.fas.fa-sort
      %span.sr-only Drag ingredient
    = f.hidden_field :position, class: 'js-position-input'
    = f.input :name, wrapper_class: 'flex-fill', label_html: { class: 'sr-only' }
    = link_to_remove_association f do
      %i.fas.fa-minus-circle.text-dark.ml-3{ style: 'margin-top: 10px' }
